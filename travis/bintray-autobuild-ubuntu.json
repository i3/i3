{
   "package": {
        "name": "i3-wm",
        "repo": "i3-autobuild-ubuntu",
        "subject": "i3"
    },

    "version": {
        "name": "%version%",
        "desc": "TODO",
        "gpgSign": false
    },

    "files": [
        {
            "includePattern": "build/deb/ubuntu-amd64/(.*\\.deb)$",
	    "matrixParams": {
                "deb_distribution": "bionic",
                "deb_component": "main",
                "deb_architecture": "amd64"
	    },
	    "uploadPattern": "$1"
        },
        {
            "includePattern": "build/deb/ubuntu-i386/(.*\\.deb)$",
	    "matrixParams": {
                "deb_distribution": "bionic",
                "deb_component": "main",
                "deb_architecture": "i386"
	    },
	    "uploadPattern": "$1"
        }
    ],

    "publish": true
}
